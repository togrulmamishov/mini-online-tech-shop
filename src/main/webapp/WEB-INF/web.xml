<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>Controller</welcome-file>
    </welcome-file-list>
    <servlet>
        <display-name>Controller</display-name>
        <servlet-name>Controller</servlet-name>
        <servlet-class>az.media.online.shopping.servlets.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>AdminController</display-name>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>az.media.online.shopping.servlets.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AdminAuthorisation</filter-name>
        <filter-class>az.media.online.shopping.filter.AdminAuthorisation</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminAuthorisation</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

</web-app>